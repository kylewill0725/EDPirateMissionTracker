<UserControl x:Class="Wpf.Views.Controls.MissionRemainingAndReward"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Wpf.Views.Controls"
             mc:Ignorable="d"
             x:Name="Control"
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <TextBlock Text="{Binding ElementName=Control, Path=Remaining}" TextAlignment="Right" />
        <TextBlock Text="{Binding ElementName=Control, Path=Reward, StringFormat={}{0:C0}}" TextAlignment="Right" />
    </StackPanel>
</UserControl>