<UserControl x:Class="Wpf.Views.Controls.DataWithLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Wpf.Views.Controls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <StackPanel Orientation="Horizontal">
        <Label VerticalContentAlignment="Center" Content="{Binding Path=Label}" />
        <TextBlock VerticalAlignment="Center" Text="{Binding Path=Data}"/>
    </StackPanel>
</UserControl>
